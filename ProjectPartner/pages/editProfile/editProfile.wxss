.container {
  padding: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  margin-bottom: 5px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
  cursor: pointer;
}

input, textarea {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.save-btn {
  margin-top: 20px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  text-align: center;
}
