.chat-page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.chat-header {
  height: 50px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 10px;
  align-items: center;
}

.chat-content {
  flex: 1;
  padding: 10px;
  background-color: #f4f4f4;
}

.message {
  display: flex;
  margin-bottom: 10px;
}

.message .avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
}

.message .text {
  max-width: 70%;
  padding: 10px;
  background-color: #fff;
  border-radius: 10px;
  margin-left: 10px;
}

.chat-input {
  padding: 10px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.chat-input input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-right: 10px;
}

.chat-input button {
  padding: 10px 20px;
  background-color: #007aff;
  color: #fff;
  border-radius: 5px;
}
