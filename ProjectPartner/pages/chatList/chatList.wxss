.chat-list {
  padding: 10px;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
  cursor: pointer; /* 增加点击效果 */
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.chat-info {
  margin-left: 10px;
}

.nickname {
  font-size: 16px;
  font-weight: bold;
}

.last-message {
  color: #888;
}
