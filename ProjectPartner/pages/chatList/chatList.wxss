/* pages/chatList/chatList.wxss */
.chat-list {
  padding: 10px;
  background-image: url('cloud://projectpartner-5ghyuxo33c4f47d1.7072-projectpartner-5ghyuxo33c4f47d1-1330270979/background10.jpg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 1; /* 设置背景透明度为50% */
}

.search-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.search-btn {
  padding: 8px 15px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
}

.friend-list {
  height: 650px; /* 可以根据需要调整 */
  overflow-y: scroll; /* 纵向滚动 */
  width: 100%; /* 横向铺满 */
}

.friend-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
  cursor: pointer; /* 增加点击效果 */
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.friend-info {
  margin-left: 10px;
}

.nickname {
  font-size: 16px;
  font-weight: bold;
}

.bio {
  color: #888;
}

.loading-text, .no-friends-text {
  text-align: center;
  color: #888;
  margin-top: 20px;
  font-size: 16px;
}
