/* pages/userProfile/userProfile.wxss */
.container {
  padding: 20px;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.nickname {
  font-size: 24px;
  font-weight: bold;
  margin-top: 10px;
}

.bio, .major {
  font-size: 16px;
  color: #666;
}

.add-friend-btn {
  margin-top: 20px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
}
