.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start; /* 改为 flex-start 使按钮在上半部分 */
  height: 100vh;
  background-size: cover; /* 使背景图覆盖整个容器 */
}

.button-container {
  margin-top: -10%; /* 调整项目按钮位置 */
}

.project-button {
  font-size: 48px;
  padding: 2px 20px;
  border: none;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  cursor: pointer;
}

.icon {
  position: absolute; /* 使用绝对定位 */
  width: 100px; /* 根据需要调整图标大小 */
  height: 100px; /* 根据需要调整图标大小 */
}

.left-icon {
  bottom: 30px; /* 距离底部 30px */
  left: 30px; /* 距离左侧 30px */
}

.right-icon {
  bottom: 30px; /* 距离底部 30px */
  right: 30px; /* 距离右侧 30px */
}
