/* pages/project/project.wxss */
.container {
  position: absolute; /* 绝对定位 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1; /* 确保背景图在其他内容后面 */
}

.project-image {
  width: -100%;
  height: 200px;
  margin-top: -80px;
}

.project-title-container {
  display: flex; /* 使用 flexbox */
  justify-content: center; /* 居中对齐 */
  margin: -5px 0; /* 顶部和底部间距 */
}

.project-title {
  font-size: 36px; /* 控制项目标题的字体大小 */
  font-weight: bold;
}

.project-description-container {
  margin: 10px 0; /* 顶部和底部间距 */
}

.project-description {
  font-size: 20px; /* 控制简介的字体大小 */
  text-align: left; /* 左对齐 */
  font-weight: bold;
}

.project-initiator-container,
.project-members-container {
  margin: 5px 0; /* 顶部和底部间距 */
}

.project-initiator,
.project-members {
  font-size: 20px; /* 控制发起人和成员的字体大小 */
  font-weight: bold;
  color: rgb(2, 2, 2);
  text-align: left; /* 左对齐 */
}

.loading-text {
  text-align: center;
  color: #888;
  margin-top: 20px;
  font-size: 16px;
}
