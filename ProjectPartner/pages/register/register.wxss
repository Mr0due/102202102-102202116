/* 页面整体布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(245, 245, 245, 0.4); /* 设置一个透明的背景以增强可读性 */
  padding: 20px;
  height: 100vh; /* 占满整个视口高度 */
  position: relative; /* 确保子元素绝对定位相对于容器 */
  overflow: hidden; /* 防止子元素溢出 */
}


/* 标题样式 */
.title {
  font-size: 36px;
  font-weight: bold;
  margin: 40px 0;
  color: #333;
}

/* 输入框容器 */
.form-item {
  width: 100%; /* 容器宽度为100% */
  display: flex; /* 使用flex布局 */
  justify-content: center; /* 水平居中 */
  margin-bottom: 20px; /* 减少输入框之间的间距 */
}

/* 输入框样式 */
.input, .textarea {
  width: 80%; /* 设置输入框宽度为80% */
  border: 2px solid #007aff; /* 设置边框颜色和宽度 */
  border-radius: 10px; /* 圆角边框 */
  padding: 0 20px;
  font-size: 28px;
  background-color: #fff;
  height: 60px; /* 输入框高度 */
}

/* 文本区域样式 */
.textarea {
  height: 150px; /* 文本区域高度 */
  resize: none; /* 禁止调整大小 */
}

/* 注册按钮样式 */
.register-button {
  width: 80%; /* 设置按钮宽度为80% */
  height: 60px; /* 按钮高度 */
  background-color: #1aad19;
  color: #fff;
  text-align: center;
  line-height: 45px; /* 垂直居中 */
  font-size: 30px;
  border-radius: 10px;
  margin-top: 10px;
}

/* 提交按钮的按下状态 */
.register-button:active {
  background-color: #179b16;
}

.background {
  position: absolute; /* 绝对定位 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%; /* 确保背景图片覆盖整个容器 */
  height: 100%;
  z-index: -1; /* 确保背景在下面 */
}

/* 协议勾选样式 */
.agreement {
  font-size: 24px;
  color: #333;
  margin-top: 20px;
}

/* 链接样式 */
.link {
  color: #1aad19;
  text-decoration: underline;
  margin-left: 5px;
}
